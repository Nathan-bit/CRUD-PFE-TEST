<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Stages - Dashboard Admin</title>
    <link rel="stylesheet" href="../public/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Include Bootstrap CSS -->
    <!-- <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> -->
</head>
<body>
    <div class="container">
        <div class="sidebar-nav">
            <div class="logo">
                <a href="/">Gestion des Stages</a>
            </div>
            <ul>
                <li><a href="/home#" class="sidebar-item"><i class="fas fa-tachometer-alt"></i> Tableau de bord</a></li>
                <li><a href="/students#" class="sidebar-item"><i class="fas fa-users"></i> Étudiants</a></li>
                <li><a href="/teachers#" class="sidebar-item"><i class="fas fa-chalkboard-teacher"></i> Enseignants</a></li>
                <li><a href="/companies#" class="sidebar-item"><i class="fas fa-building"></i> Entreprises</a></li>
                <li><a href="/internships#" class="sidebar-item"><i class="fas fa-file-alt"></i> Liste des stages</a></li>
                <li><a href="/calendar#" class="sidebar-item"><i class="fas fa-calendar-alt"></i> Calendrier</a></li>
                <li><a href="/settings#" class="sidebar-item"><i class="fas fa-cog"></i> Paramètres</a></li>
                <li>
                    <a href="#gestionSubmenu" class="sidebar-item dropdown-toggle" aria-expanded="false" data-toggle="collapse">
                        <i class="fas fa-tasks"></i> Gestion
                    </a>
                    <ul class="collapse list-unstyled" id="gestionSubmenu">
                        <li><a href="/upload#" class="sidebar-item"><i class="fas fa-upload"></i> Uploads files</a></li>
                        <li><a href="/gestion#" class="sidebar-item"><i class="fas fa-database"></i> Databases</a></li>
                    </ul>
                </li>
                <li><a href="/supervision#" class="sidebar-item"><i class="fas fa-file-alt"></i> Encadrement</a></li>
            </ul>
        </div>

        
        <div class="main-content">
            <nav class="navbar">
                <div class="search-bar">
                    <input type="text" placeholder="Rechercher...">
                    <i class="fas fa-search"></i>
                </div>
                <div class="user-info">
                    <i class="fas fa-bell"></i>
                    <div class="user-avatar">
                        <img src="https://via.placeholder.com/40" alt="Avatar">
                    </div>
                    <i class="fas fa-sign-out-alt"><a href="/connection/logout">logout</a></i>
                </div>
            </nav>
            <h1>Tableau de bord</h1>
           
        </div>
    </div>
    <!-- Scripts -->
    <script src="../public/js/script.js"></script>
    <!-- Include Bootstrap JS -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // JavaScript for highlighting active items in the sidebar and navbar
        const currentLocation = location.pathname + location.hash;
        const sidebarItems = document.querySelectorAll('.sidebar-item');

        sidebarItems.forEach(item => {
            if (item.getAttribute('href') === currentLocation) {
                item.classList.add('active');
            }
        });
    </script>
</body>
</html>
