<!DOCTYPE html>
<html>
<head>
  <title></title>
  <!-- Include Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Include your CSS files here -->
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="sidebar">
          <!-- Sidebar content -->
          <ul class="list-group">
            <li class="list-group-item"><a href="#" data-page="home">Home</a></li>
            <li class="list-group-item"><a href="#" data-page="etudiant">Ã‰tudiant</a></li>
            <li class="list-group-item"><a href="#" data-page="admin">Admin</a></li>
            <li class="list-group-item"><a href="#" data-page="user">User</a></li>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <div class="content">
          <!-- Content will be loaded dynamically here -->
        
        </div>
      </div>
    </div>
  </div>
  <!-- Include your JavaScript files here -->
  <!-- Include Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    // JavaScript code to handle sidebar navigation
    const sidebar = document.querySelector('.sidebar');
    const content = document.querySelector('.content');

    sidebar.addEventListener('click', (event) => {
      const target = event.target.closest('a');
      if (target) {
        event.preventDefault();
        const page = target.dataset.page;
        loadPage(page);
      }
    });

    function loadPage(page) {
  fetch(`/${page}.ejs`)
    .then(response => response.text())
    .then(html => {
      content.innerHTML = html;
    })
    .catch(error => {
      console.error('Error loading page:', error);
    });
}
  </script>
</body>
</html>
